<%- include('../../shared/includes/head', { pageTitle: 'Add New Products' }) %>
<link rel="stylesheet" href="/styles/forms.css">
    </head>

    <body>
        <%- include('../../shared/includes/header') %>
            <main>
                <h1>Add New Products</h1>
                <form action="" method="">
                    <p>
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" required>
                    </p>
                    <p>
                        <label for="imagee">Image</label>
                        <input type="file" id="image" name="image" accept="image/png,image/jpg" required>
                    </p>
                    <p>
                        <label for="summary">Summary</label>
                        <input type="text" id="summary" name="summary" maxlength="255" required>
                    </p>
                    <p>
                        <label for="price">Price</label>
                        <input type="number" id="price" name="price" min="0.01" step="0.01" required>
                    </p>

                    <p>
                        <label for="desctiption">Description</label>
                        <textarea id="desctiption" name="desctiption" rows="7" required> </textarea>
                    </p>
                    <p>
                        <button class="btn btn-alt" type="reset">Reset</button>
                        <button class="btn" type="submit">Save</button>
                    </p>
                </form>


            </main>
            <%- include('../../shared/includes/footer') %>